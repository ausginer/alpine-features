{
  "name": "@ausginer/alpine-features",
  "private": true,
  "version": "1.0.0",
  "description": "A collection of Dev Container Features optimized for Alpine Linux environments",
  "main": "index.js",
  "scripts": {
    "test": "devcontainer features test --base-image alpine:latest --skip-scenarios .",
    "test:scenarios": "devcontainer features test --skip-autogenerated .",
    "test:node": "devcontainer features test --features alpine-node --base-image alpine:latest .",
    "test:temurin": "devcontainer features test --features alpine-temurin --base-image alpine:latest .",
    "test:chromium": "devcontainer features test --features alpine-chromium --base-image alpine:latest .",
    "test:validate": "devcontainer features validate .",
    "test:ci": "devcontainer features test --base-image alpine:latest --skip-scenarios .",
    "test:scenarios-ci": "devcontainer features test --skip-autogenerated .",
    "validate": "devcontainer features validate ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ausginer/alpine-features.git"
  },
  "keywords": [
    "devcontainer",
    "features", 
    "alpine",
    "docker",
    "development-environment"
  ],
  "author": "Vlad Rindevich <vladrin@vaadin.com> (https://github.com/Lodin)",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/ausginer/alpine-features/issues"
  },
  "homepage": "https://github.com/ausginer/alpine-features#readme",
  "devDependencies": {
    "@devcontainers/cli": "^0.56.0"
  }
}
